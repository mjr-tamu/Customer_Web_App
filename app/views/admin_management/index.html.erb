<div class="admin-management-container">
  <div class="admin-management-card">
    <div class="admin-header">
      <div class="admin-icon">
        👥
      </div>
      <h1 class="admin-title">Admin Management</h1>
      <p class="admin-subtitle">Manage admin users for WIPS Event Calendar</p>
    </div>

    <div class="admin-content">
      <!-- Add New Admin Section -->
      <div class="add-admin-section">
        <h2>Add New Admin</h2>
        <%= form_with url: create_admin_path, method: :post, local: true, class: "admin-form" do |form| %>
          <div class="form-group">
            <%= form.label :email, "User Email", class: "form-label" do %>
              <span class="label-icon">📧</span>
              Email Address
            <% end %>
            <%= form.email_field :email, class: "form-input", placeholder: "Enter user email address...", required: true %>
          </div>
          <div class="form-actions">
            <%= form.submit "Promote to Admin", class: "submit-button" %>
            <%= link_to 'Back to Calendar', home_path, class: "cancel-button" %>
          </div>
        <% end %>
      </div>

      <!-- Current Admins Section -->
      <div class="current-admins-section">
        <h2>Current Users</h2>
        <div class="admins-list">
          <% @users.each do |user| %>
            <div class="admin-item">
              <div class="admin-info">
                <div class="admin-email"><%= user.email %></div>
                <div class="admin-name"><%= user.full_name %> (<%= user.role.capitalize %>)</div>
                <div class="admin-status">
                  <% if user == current_user %>
                    <span class="current-user">(You)</span>
                  <% end %>
                </div>
              </div>
              <div class="admin-actions">
                <% unless user == current_user %>
                  <% if user.admin? %>
                    <%= form_with url: remove_admin_path(user), method: :delete, local: true, class: "remove-form" do |form| %>
                      <%= form.submit "🗑️ Demote to Member", class: "remove-button", 
                          data: { confirm: "Are you sure you want to demote #{user.email} to member?" } %>
                    <% end %>
                  <% else %>
                    <%= form_with url: create_admin_path, method: :post, local: true, class: "remove-form" do |form| %>
                      <%= form.hidden_field :email, value: user.email %>
                      <%= form.submit "⬆️ Promote to Admin", class: "promote-button" %>
                    <% end %>
                  <% end %>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

