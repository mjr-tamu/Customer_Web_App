<div class="delete-confirmation-container">
  <div class="delete-card">
    <div class="delete-header">
      <h1>Confirm Deletion</h1>
      <p>Are you sure you want to delete the calendar event?</p>
    </div>

    <div class="event-details">
      <div class="event-info">
        <div class="info-row">
          <span class="label">Title:</span>
          <span class="value"><%= @calendar.title %></span>
        </div>
        <div class="info-row">
          <span class="label">Date:</span>
          <span class="value"><%= @calendar.event_date.strftime("%B %d, %Y at %I:%M %p") %></span>
        </div>
        <div class="info-row">
          <span class="label">Description:</span>
          <span class="value"><%= @calendar.description %></span>
        </div>
        <div class="info-row">
          <span class="label">Location:</span>
          <span class="value"><%= @calendar.location %></span>
        </div>
        <div class="info-row">
          <span class="label">Category:</span>
          <span class="value"><%= @calendar.category %></span>
        </div>
      </div>
    </div>

    <div class="action-buttons">
      <%= button_to "Yes, Delete", destroy_calendar_path(@calendar), method: :delete, 
          class: "delete-confirm-btn", 
          data: { confirm: "This action cannot be undone. Are you absolutely sure?" } %>
      <%= link_to "Cancel", home_path, class: "cancel-btn" %>
      <%= link_to "Back to Home", home_path, class: "back-btn" %>
    </div>
  </div>
</div>

