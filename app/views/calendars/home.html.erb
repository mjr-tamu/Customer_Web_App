<div class="home-container">
  <div class="calendar-header">
    <div class="header-content">
      <div class="header-left">
        <h1>WIPS Event Calendar</h1>
        <% if admin_signed_in? %>
          <p>Welcome back, <%= current_admin.email %></p>
        <% elsif user_signed_in? %>
          <p>Welcome, <%= current_user["name"] %>!</p>
        <% else %>
          <p>Public Event Calendar</p>
        <% end %>
      </div>
      <div class="header-right">
        <div class="header-actions">
          <%= link_to "About", about_path, class: "about-btn" %>
          <% if admin_signed_in? %>
            <%= link_to "Sign Out", destroy_admin_session_path, method: :delete, class: "sign-out-btn" %>
            <%= link_to admin_management_path, class: "admin-menu-btn", title: "Admin Management" do %>
              <span class="hamburger-icon">‚ò∞</span>
            <% end %>
          <% elsif user_signed_in? %>
            <%= button_to "Sign Out", sign_out_user_path, method: :delete, class: "sign-out-btn", 
                data: { confirm: "Are you sure you want to sign out?" } %>
          <% else %>
            <%= button_to "Sign In", admin_google_oauth2_omniauth_authorize_path, method: :post, class: "sign-in-btn", data: {turbo: "false"} %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Category Filter Section -->
  <div class="category-filter">
    <div class="filter-buttons">
      <%= link_to "All", home_path(date: params[:date]), 
          class: "filter-btn #{'active' if @selected_categories.empty?}" %>
      <% @available_categories.each do |category| %>
        <% 
          # Toggle category in selection
          if @selected_categories.include?(category)
            new_categories = @selected_categories - [category]
          else
            new_categories = @selected_categories + [category]
          end
        %>
        <%= link_to category, home_path(categories: new_categories, date: params[:date]), 
            class: "filter-btn #{'active' if @selected_categories.include?(category)}" %>
      <% end %>
    </div>
    <% if @selected_categories.any? %>
      <div class="active-filters">
        <small>Active filters: <%= @selected_categories.join(', ') %></small>
      </div>
    <% end %>
  </div>

  <div class="main-content <%= 'with-dashboard' if user_signed_in? && !admin_signed_in? %>">
    <div class="calendar-container">
      <div class="calendar-nav">
        <div class="nav-left">
          <%= link_to "‚Üê", home_path(date: (@current_date - 1.month).strftime("%Y-%m")), class: "nav-btn prev" %>
          <%= link_to "‚Üí", home_path(date: (@current_date + 1.month).strftime("%Y-%m")), class: "nav-btn next" %>
          <h2><%= @current_date.strftime("%B %Y") %></h2>
        </div>
        <div class="nav-right">
          <%= link_to "Today", home_path, class: "today-btn" %>
          <% if admin_signed_in? %>
            <%= link_to "Create", new_calendar_path, class: "create-btn" %>
          <% end %>
        </div>
      </div>

      <div class="calendar-grid">
    <div class="calendar-header-row">
      <div class="day-header">Sun</div>
      <div class="day-header">Mon</div>
      <div class="day-header">Tue</div>
      <div class="day-header">Wed</div>
      <div class="day-header">Thu</div>
      <div class="day-header">Fri</div>
      <div class="day-header">Sat</div>
    </div>
    
    <% @calendar_days.each_slice(7) do |week| %>
      <div class="calendar-week">
        <% week.each do |day| %>
          <div class="calendar-day <%= 'other-month' if day[:other_month] %> <%= 'today' if day[:today] %>">
            <div class="day-number"><%= day[:date].day %></div>
            <div class="events">
              <% day[:events].each do |event| %>
                <div class="event-item" title="<%= event.title %> - <%= event.event_date.strftime('%I:%M %p') %> - <%= event.category %>">
                  <%= link_to truncate(event.title, length: 15), show_calendar_path(event), class: "event-link" %>
                  <div class="event-category"><%= event.category %></div>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
    </div>
  </div>

  <!-- Member Dashboard (only for signed-in users, not admins) -->
  <% if user_signed_in? && !admin_signed_in? %>
    <div class="member-dashboard">
      <div class="dashboard-header">
        <h3>My Events</h3>
        <p>Events you've signed up for</p>
      </div>
      
      <div class="dashboard-content">
        <% if @user_signups.any? %>
          <div class="signed-up-events">
            <% @user_signups.each do |signup| %>
              <div class="event-card">
                <div class="event-info">
                  <h4><%= signup.calendar.title %></h4>
                  <p class="event-date">
                    <%= signup.calendar.event_date.strftime("%B %d, %Y") %>
                    at <%= signup.calendar.event_date.strftime("%I:%M %p") %>
                  </p>
                  <p class="event-category"><%= signup.calendar.category %></p>
                  <% if signup.calendar.location.present? %>
                    <p class="event-location">üìç <%= signup.calendar.location %></p>
                  <% end %>
                </div>
                <div class="event-actions">
                  <%= link_to "View Details", show_calendar_path(signup.calendar), class: "view-details-btn" %>
                  <%= button_to "Cancel", cancel_signup_calendar_path(signup.calendar), method: :delete, 
                      class: "cancel-signup-btn", 
                      data: { confirm: "Are you sure you want to cancel your signup for this event?" } %>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="no-events">
            <p>You haven't signed up for any events yet.</p>
            <p>Browse the calendar and click on events to sign up!</p>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

