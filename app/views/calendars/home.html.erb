<div class="home-container">
  <div class="content-wrapper">
    <div class="calendar-header">
      <div class="header-content">
        <div class="header-left">
          <h1>WIPS Event Calendar</h1>
          <% if user_signed_in? %>
            <p>Welcome, <%= current_user.full_name %>!
              <% if admin_user? %>
                (Admin)
              <% else %>
                (Member)
              <% end %>
            </p>
          <% else %>
            <p>Public Event Calendar</p>
          <% end %>
        </div>
        <div class="header-right">
          <div class="header-actions">
            <%= link_to "About", about_path, class: "about-btn" %>
            <% if user_signed_in? %>
              <%= link_to "Sign Out", destroy_admin_session_path, method: :delete, class: "sign-out-btn" %>
              <% if admin_user? %>
                <%= link_to admin_management_path, class: "admin-menu-btn", title: "Admin Management" do %>
                  <span class="hamburger-icon">☰</span>
                <% end %>
              <% end %>
            <% else %>
              <%= button_to "Sign In", admin_google_oauth2_omniauth_authorize_path, method: :post, class: "sign-in-btn", data: { turbo: "false" } %>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <!-- Category Filter Section -->
    <div class="category-filter">
      <div class="filter-buttons">
        <%= link_to "All", home_path(date: params[:date]),
            class: "filter-btn #{'active' if @selected_categories.empty?}" %>
        <% @available_categories.each do |category| %>
          <% new_categories =
               if @selected_categories.include?(category)
                 @selected_categories - [category]
               else
                 @selected_categories + [category]
               end %>
          <%= link_to category, home_path(categories: new_categories, date: params[:date]),
              class: "filter-btn #{'active' if @selected_categories.include?(category)}" %>
        <% end %>
      </div>
      <% if @selected_categories.any? %>
        <div class="active-filters">
          <small>Active filters: <%= @selected_categories.join(', ') %></small>
        </div>
      <% end %>
    </div>

    <!-- MAIN ROW: sidebar + calendar -->
    <div class="main-content-wrapper">
      <div class="main-content">
        <% if user_signed_in? %>
          <!-- Dashboard Sidebar -->
          <div class="dashboard-sidebar">
            <div class="dashboard-header">
              <h3>My Events</h3>
            </div>

            <!-- Upcoming Events Section -->
            <div class="dashboard-section">
              <h4 class="section-title">📅 Upcoming Events</h4>
              <% if @upcoming_events.any? %>
                <div class="event-list">
                  <% @upcoming_events.each do |event| %>
                    <div class="dashboard-event-item upcoming">
                      <div class="event-date">
                        <%= event.event_date.strftime("%b %d") %>
                      </div>
                      <div class="event-details">
                        <%= link_to truncate(event.title, length: 20), show_calendar_path(event), class: "event-title" %>
                        <div class="event-category"><%= event.category %></div>
                      </div>
                    </div>
                  <% end %>
                </div>
              <% else %>
                <p class="no-events">No upcoming events</p>
              <% end %>
            </div>

            <!-- Past Events Section -->
            <div class="dashboard-section">
              <h4 class="section-title">✅ Past Events</h4>
              <% if @past_events.any? %>
                <div class="event-list">
                  <% @past_events.each do |event| %>
                    <div class="dashboard-event-item past">
                      <div class="event-date">
                        <%= event.event_date.strftime("%b %d") %>
                      </div>
                      <div class="event-details">
                        <%= link_to truncate(event.title, length: 20), show_calendar_path(event), class: "event-title" %>
                        <div class="event-category"><%= event.category %></div>
                      </div>
                    </div>
                  <% end %>
                </div>
              <% else %>
                <p class="no-events">No past events</p>
              <% end %>
            </div>
          </div>
        <% end %>

        <!-- Calendar column -->
        <div class="calendar-container">
          <div class="calendar-nav">
            <div class="nav-left">
              <%= link_to "←", home_path(date: (@current_date - 1.month).strftime("%Y-%m")), class: "nav-btn prev" %>
              <%= link_to "→", home_path(date: (@current_date + 1.month).strftime("%Y-%m")), class: "nav-btn next" %>
              <h2><%= @current_date.strftime("%B %Y") %></h2>
            </div>
            <div class="nav-right">
              <%= link_to "Today", home_path, class: "today-btn" %>
              <% if admin_user? %>
                <%= link_to "Create", new_calendar_path, class: "create-btn" %>
              <% end %>
            </div>
          </div>

          <div class="calendar-grid">
            <div class="calendar-header-row">
              <div class="day-header">Sun</div>
              <div class="day-header">Mon</div>
              <div class="day-header">Tue</div>
              <div class="day-header">Wed</div>
              <div class="day-header">Thu</div>
              <div class="day-header">Fri</div>
              <div class="day-header">Sat</div>
            </div>

            <% @calendar_days.each_slice(7) do |week| %>
              <div class="calendar-week">
                <% week.each do |day| %>
                  <div class="calendar-day <%= 'other-month' if day[:other_month] %> <%= 'today' if day[:today] %>">
                    <div class="day-number"><%= day[:date].day %></div>
                    <div class="events">
                      <% day[:events].each do |event| %>
                        <div
                          class="event-item <%= 'signed-up' if user_signed_in? && current_user.signed_up_events.include?(event) %>"
                          title="<%= event.title %> - <%= event.event_date.strftime('%I:%M %p') %> - <%= event.category %>">
                          <%= link_to truncate(event.title, length: 15), show_calendar_path(event), class: "event-link" %>
                          <div class="event-category"><%= event.category %></div>
                          <% if user_signed_in? && current_user.signed_up_events.include?(event) %>
                            <div class="signup-indicator">✓</div>
                          <% end %>
                        </div>
                      <% end %>
                    </div>
                  </div>
                <% end %>
              </div>
            <% end %>
          </div>
        </div> <!-- /calendar-container -->
      </div>   <!-- /main-content -->
    </div>     <!-- /main-content-wrapper -->
  </div>
</div>

