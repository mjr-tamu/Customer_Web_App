<div class="details-container">
  <div class="details-card">
    <div class="details-header">
      <div class="details-icon">
        üìÖ
      </div>
      <h1 class="details-title">Event Details</h1>
      <p class="details-subtitle">View your calendar event information</p>
    </div>

    <div class="details-content">
      <div class="event-info">
        <div class="info-section">
          <div class="info-label">
            <span class="label-icon">üìù</span>
            Event Title
          </div>
          <div class="info-value"><%= @calendar.title %></div>
        </div>

        <div class="info-section">
          <div class="info-label">
            <span class="label-icon">üìÖ</span>
            Date & Time
          </div>
          <div class="info-value">
            <%= @calendar.event_date.strftime("%A, %B %d, %Y") %>
            <br>
            <span class="time-info"><%= @calendar.event_date.strftime("%I:%M %p") %></span>
          </div>
        </div>

        <div class="info-section">
          <div class="info-label">
            <span class="label-icon">üè∑Ô∏è</span>
            Category
          </div>
          <div class="info-value"><%= @calendar.category %></div>
        </div>

        <div class="info-section">
          <div class="info-label">
            <span class="label-icon">üìÑ</span>
            Description
          </div>
          <div class="info-value description-text"><%= @calendar.description %></div>
        </div>

        <div class="info-section">
          <div class="info-label">
            <span class="label-icon">üìç</span>
            Location
          </div>
          <div class="info-value"><%= @calendar.location.present? ? @calendar.location : 'No location specified' %></div>
        </div>
      </div>

      <div class="action-buttons">
        <% if user_signed_in? %>
          <% if current_user.signed_up_events.include?(@calendar) %>
            <%= button_to 'Sign Out', signout_calendar_path(@calendar), method: :delete, class: "action-button signout-button", 
                data: { confirm: "Are you sure you want to sign out of this event?" } %>
          <% else %>
            <%= button_to 'Sign Up', signup_calendar_path(@calendar), method: :post, class: "action-button signup-button" %>
          <% end %>
        <% end %>
        
        <% if admin_user? %>
          <%= link_to 'Edit Event', edit_calendar_path(@calendar), class: "action-button edit-button" %>
          <%= link_to 'Export CSV', export_calendar_path(@calendar, format: :csv), class: "action-button export-button" %>
          <button type="button" class="action-button delete-button" onclick="openDeleteModal()">Delete Event</button>
        <% end %>
        <%= link_to 'Back to Calendar', home_path, class: "action-button back-button" %>
      </div>
    </div>
  </div>
</div>

<!-- Delete Confirmation Modal -->
<div id="deleteModal" class="modal">
  <div class="modal-content">
    <div class="modal-header">
      <h3>Confirm Event Deletion</h3>
      <span class="close" onclick="closeDeleteModal()">&times;</span>
    </div>
    <div class="modal-body">
      <p>Are you sure you want to delete <strong>"<%= @calendar.title %>"</strong>?</p>
      <p class="warning-text">This action cannot be undone and will remove all signup data for this event.</p>
    </div>
    <div class="modal-footer">
      <button type="button" class="modal-btn cancel-btn" onclick="closeDeleteModal()">Cancel</button>
      <%= button_to "Delete Event", destroy_calendar_path(@calendar), method: :delete, class: "modal-btn delete-btn", data: { confirm: false } %>
    </div>
  </div>
</div>

